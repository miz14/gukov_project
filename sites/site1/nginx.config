server {
    listen 80;
    gzip on;
    gzip_types text/html text/css application/javascript image/jpeg;
    
    root /usr/share/nginx/html;
    index index.html;

    # Главный location
    location / {
        try_files $uri $uri/ =404;
        
        # Добавляем заголовки против кэширования для всех файлов
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }
}